<Alloy>
	<Collection src="book"/>
	<Window title="MyLibrary" exitOnClose="true">
		<Menu>
			<MenuItem id="addAction" onClick="addBook" />
			<MenuItem id="refreshAction" onClick="refreshTable" />
		</Menu>
		<TableView dataCollection="book" top="10" onDragEnd="refreshTable">
			<TableViewRow title="{title}" color="black" onClick="showBook"/>
		</TableView>
	</Window>
</Alloy>
